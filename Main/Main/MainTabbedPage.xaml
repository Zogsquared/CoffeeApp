<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Main.MainTabbedPage"
                NavigationPage.HasNavigationBar="False">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="MENU" >
        <StackLayout>
            <Frame BackgroundColor="#292a2f" Padding="24" CornerRadius="0">
                <Image Source="content.png"></Image>
            </Frame>

            <Frame BackgroundColor="LightGray" Padding="0" CornerRadius="0">
                <Button x:Name="espresso" Text="Espresso" TextColor="Black" BackgroundColor="Transparent" FontSize="20" Padding="20" Clicked="espresso_Clicked"></Button>
            </Frame>

            <Frame BackgroundColor="LightGray" Padding="0" CornerRadius="0">
                <Button x:Name="hotDrinks" Text="Hot Drinks" TextColor="Black" BackgroundColor="Transparent" FontSize="20" Padding="20" Clicked="hotDrinks_Clicked"></Button>
            </Frame>

            <Frame BackgroundColor="LightGray" Padding="0" CornerRadius="0">
                <Button x:Name="coldDrinks" Text="Cold Drinks" TextColor="Black" BackgroundColor="Transparent" FontSize="20" Padding="20" Clicked="coldDrinks_Clicked"></Button>
            </Frame>

            <Frame BackgroundColor="LightGray" Padding="0" CornerRadius="0">
                <Button x:Name="quickBites" Text="Quick Bites" TextColor="Black" BackgroundColor="Transparent" FontSize="20" Padding="20" Clicked="quickBites_Clicked"></Button>
            </Frame>

        </StackLayout>
    </ContentPage>
    <ContentPage Title="ABOUT" >
        <StackLayout>
            <Image Source="coverart.jfif"></Image>
            <Label Text="Jules Cafe" TextColor="White" FontSize="38" Padding="25, 10"></Label>
            <Label Text="4A Kent Street &#10;Newmarket &#10;Auckland &#10;1023" TextColor="White" FontSize="15" Padding="25, 10"></Label>
            <Label Text="+64 9 444 5555" TextColor="White" FontSize="15" Padding="25, 10"></Label>
            <Label Text="info@julescafe.co.nz" TextColor="White" FontSize="15" Padding="25, 10"></Label>
            <FlexLayout Padding="25, 10">
                <Image Source="unnamed.png" HeightRequest="50" />
                <Label Padding="10"/>
                <Image Source="insta.png" HeightRequest="50" />
            </FlexLayout>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="MAP" >
        <StackLayout>
            <WebView x:Name="mapWebView" Source="https://mobile.here.com/p/h-%252FYXBwX2lkPTNLSVFsczJEU0tsTldmZGFzcEI5JmFwcF9jb2RlPWYydkRuMVRVWUVWbjRrWXR3SzM3eXc%253D?msg=4a%20Kent%20St" VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage>
</TabbedPage>